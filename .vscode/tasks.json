{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "command": "source ~/.nvm/nvm.sh && nvm use 22 && yarn start:dev",
            "problemMatcher": [],
            "label": "Yarn: start:dev",
            "detail": "npx nodemon"
