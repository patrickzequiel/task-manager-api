        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "tsc: build - tsconfig.json",
            "options": {
                "env": {
                    "PATH": "${env:HOME}/.nvm/versions/node/v22.20.0/bin:${env:PATH}"
                }
            }
        }
    ]
}
