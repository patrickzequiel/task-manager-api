          "response": []
        },
        {
          "name": "Login User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/user/login?email=user@example.com&password=password123",
              "host": ["{{baseUrl}}"],
              "path": ["user", "login"],
              "query": [
                {
                  "key": "email",
                  "value": "user@example.com",
                  "description": "User email address"
                },
                {
                  "key": "password",
                  "value": "password123",
                  "description": "User password"
                }
              ]
            },
            "description": "Login user with email and password"
          },
          "response": []
